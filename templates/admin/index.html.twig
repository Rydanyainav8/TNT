									{# <i class="far fa-edit edigray"></i> #}
									Modifier
								</a>
								<a href="{{ path('delete_mat', {id: materiel.id}) }}" class="btnUD redy">
									{# <i class="far fa-minus-circle delred"></i> #}
									Suprimer
								</a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
{% endblock %}
